<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#00ADB5"/> <!-- Basıldığında arka plan rengi -->
            <corners android:radius="5dp"/> <!-- Köşeleri yuvarlama -->
            <stroke android:width="5dp" android:color="#00ADB5"/> <!-- Kenarlık -->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Normal durumda arka plan rengi -->
            <corners android:radius="35dp"/> <!-- Köşeleri yuvarlama -->
            <stroke android:width="5dp" android:color="#00ADB5"/> <!-- Kenarlık -->
        </shape>
    </item>
</selector>
